@using System.Data

@*displays everything in table passed by TransactionController*@
@model DataTable 
<div class="container">
@*     
    @*    https://getbootstrap.com/docs/4.0/content/tables/*@
        <table name="transactions" class="table table-sm table-striped">
            <thead class="thead-light">
                <tr>
                   
                    <th scope="col">Description</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Location</th>
                    <th scope="col">Date</th>
                </tr>
            </thead>

            <tbody>
                @foreach (DataRow row in Model.Rows)
        {
                <tr>
                    
                    <td name="description"> @row["description"]</td>
                        @if (row["transactionType"].ToString()=="WD")
                        {
                        <td name="transaction-amount">-$@row["amount"]</td>
                    }
                    else
                    {
                        <td name="transaction-amount">$@row["amount"]</td>
                    }
                    <td name="location">@row["locations"]</td>
                    <td name="date">@row["processingDate"].ToString().Split(" ")[0]</td>
                </tr>
        }
        </tbody>
        </table>
</div>